{
  "containerDefinitions": [
    {
      "cpu": 1024,
      "essential": true,
      "image": "{{ BAR_tfstate `aws_ecr_repository.all['app'].repository_url` }}:{{ must_env `TAG` }}",
      "memory": 1024,
      "name": "app",
      "environment": [
        {
          "name": "JSON",
          "value": "{{ env `JSON` | json_escape }}"
        }
      ],
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ]
    }
  ],
  "family": "app",
  "requiresCompatibilities": ["EC2"]
}
